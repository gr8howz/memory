	body

		h1 5eaking Bad
		div#gameGrid
			table
				thead
					tr
						th
				tbody
					- for(var i = 0; i < 4; ++i)
						tr
							- for(var j = 0; j < 5; ++j)
								td.panel(id='panel'+(5*i+j))
									.container
										.flipper
											img.back(src='media/h.jpg')
											img.front(src='media/images/panels/walt.jpg')
		div#gameInfo
			button#start Start Bitch!
			#clock 60sec!









		script(src='js/vendor/jquery-2.1.0.js')
